---
import Layout from "../layouts/Layout.astro";
import ForgotPasswordForm from "../components/auth/ForgotPasswordForm";
---

<Layout title="Odzyskaj hasło">
  <div class="flex flex-col items-center justify-center min-h-screen">
    <div class="w-full max-w-md p-8 space-y-6">
      <h1 class="text-2xl font-bold text-center">Odzyskaj hasło</h1>
      <ForgotPasswordForm client:only="react" />
      <p class="text-sm text-center text-gray-500">
        <a href="/login" class="font-medium text-indigo-600 hover:underline">Powrót do logowania</a>
      </p>
    </div>
  </div>
</Layout>
